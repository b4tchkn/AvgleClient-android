<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="video"
            type="com.batch.avgleclient.model.AvVideo.Response.Videos" />
        <variable
            name="listener"
            type="com.batch.avgleclient.category.CategoryClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:foreground="@drawable/ripple">
        <!--        android:onClick="@{() -> listener.onCategoryClicked(category)}"-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:imageUrl="@{video.previewUrl}"
                android:src="@drawable/noimage"
                android:scaleType="centerCrop"></ImageView>

            <TextView
                android:id="@+id/shortName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_gravity="top"
                android:background="#88000000"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:text="@{video.title}"
                tools:text="shortName"></TextView>

            <TextView
                android:id="@+id/totalVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_margin="8dp"
                android:layout_gravity="bottom|right"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_corner_text_view"
                android:shadowRadius="@android:integer/config_longAnimTime"
                tools:text="totalVideos"></TextView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>